<div class="col-md-12">
  <div class="movie">

    <span class="pull-right">
    <% if current_user && current_user.is_member_of?(@movie) %>
    <label class="label label-success"> 已经收藏 </label>
    <%= link_to("取消收藏", quit_movie_path(@movie), method: :post, class: "btn btn-default") %>

    <% else %>
    <label class="label label-warning"> 没有收藏 </label>
    <%= link_to("现在收藏", join_movie_path(@movie), method: :post, class: "btn btn-default") %>

    <% end %>
    </span>
    <%= link_to("发表评论", new_movie_review_path(@movie), class: "btn btn-default pull-right")%>


    <%= link_to("Edit", edit_movie_path(@movie), class: "btn btn-primary pull-right")%>
  </div>
  <h2><%= @movie.title %></h2>
  <p><%= @movie.description %></p>

  <table class="table">
<thead>
 <tr>
    <th>评论内容</th>
    <th>发表者</th>
    <th>发表时间</th>
  </tr>
</thead>
<tbody>
  <% @reviews.each do |review| %>
    <tr>
      <td><%= review.content %></td>
      <td><%= review.user.email %></td>
      <td><%= review.created_at %></td>
    </tr>
  <% end %>
</tbody>
</table>
</div>
